<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ums</groupId>
    <artifactId>umsAdmin</artifactId>
    <packaging>war</packaging>
    <version>0.0.1</version>
    <name>umsAdmin Maven Webapp</name>
    <url>http://maven.apache.org</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <spring.version>4.2.3.RELEASE</spring.version>
        <slf4j.version>1.7.13</slf4j.version>
        <logback.version>1.1.3</logback.version>
        <hibernate.version>5.0.7.Final</hibernate.version>
        <shiro.version>1.2.3</shiro.version>
        <jackson.version>2.6.5</jackson.version>

        <!-- Application configuration -->
        <umsAdmin.app.host>http://10.100.160.126:9011/umsAdmin</umsAdmin.app.host>
<!--        <umsAdmin.db.url>jdbc:mysql://127.0.0.1:3306/arch?useUnicode=true&amp;characterEncoding=UTF-8&amp;useSSL=false
        </umsAdmin.db.url>
        <umsAdmin.db.username>root</umsAdmin.db.username>
        <umsAdmin.db.password>root</umsAdmin.db.password>-->
